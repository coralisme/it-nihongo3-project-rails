<p id="notice"><%= notice %></p>

<h1>Movies</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Length</th>
      <th>Directors</th>
      <th>Actors</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.description %></td>
        <td><%= movie.length %></td>
        <td><%= movie.directors %></td>
        <td><%= movie.actors %></td>
        <td><%= movie.category %></td>
        <td><%= link_to 'Show', movie, method: :get,class:"btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie), method: :get, class:"btn btn-warning" %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-info" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Movie', new_movie_path, method: :get, class:"btn btn-primary" %>
